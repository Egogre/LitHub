<div class="row" id="dashboard">
  <div class="col-md-3">
    <img class="avatar" src="<%= @user.avatar_url %>" alt="">
  </div>
  <div class="col-md-4 well" id="user_info">
    <h1>Hello <%= @user.login %>!</h1>
    <hr>
    <h3>Name: <%= @user.name %></h3>
    <h3>Email: <%= @user.email %></h3>
  </div>
  <div class="col-md-4 well" id="user_stats">
    <h3>Public Repositories: <%= @user.public_repos %></h3>
    <h4><%= link_to "Show Repositories", @user.repos_url %></h4>
    <h3>Following: <%= @user.following %></h3>
    <h4><%= link_to "Show Who You Are Following", @user.following_url %></h4>
    <h3>Followers: <%= @user.followers %></h3>
    <h4><%= link_to "Show Your Followers", @user.followers_url %></h4>
  </div>
</div>
